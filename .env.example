# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/ocr_editing"

# Image Upload Configuration
UPLOAD_DIR="./uploads"                    # Local directory for file storage
IMAGE_SERVER_URL="http://localhost:3000" # Base URL to serve images
MAX_UPLOAD_SIZE="10485760"               # 10MB in bytes

# Image Processing
ENABLE_IMAGE_OPTIMIZATION="true"         # Enable Sharp image optimization
GENERATE_THUMBNAILS="true"               # Generate thumbnails automatically
THUMBNAIL_SIZE="300x300"                 # Thumbnail dimensions

# Server Configuration  
PORT=3000
NODE_ENV="development"

# External Image Server (Optional - for production)
# If you have a separate file server
EXTERNAL_IMAGE_SERVER="https://files.yourcompany.com"

# OpenAI API (Subtitles & Translation)
OPENAI_API_KEY="sk-..."                   # Your OpenAI API key
OPENAI_API_BASE="https://api.openai.com/v1" # Optional custom base
OPENAI_TRANSCRIBE_MODEL="whisper-1"       # Transcribe model
OPENAI_TRANSLATE_MODEL="gpt-4o-mini"      # Translate model (optional)

# Storage Cleanup
AUTO_CLEANUP_ORPHANED_FILES="true"      # Auto cleanup orphaned files
CLEANUP_INTERVAL_DAYS="7"               # Days to keep orphaned files

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Security
UPLOAD_RATE_LIMIT="10"                   # Max uploads per minute per IP
SCAN_UPLOADED_FILES="true"               # Enable virus/malware scanning (if available)
